<resources>
    <attr name="candlestickLayerStyle" format="reference" />

    <declare-styleable name="CandlestickLayerStyle">
        <attr name="bullishStyle" format="reference" />
        <attr name="neutralStyle" format="reference" />
        <attr name="bearishStyle" format="reference" />
        <attr name="absolutelyBullishRelativelyBullishStyle" format="reference" />
        <attr name="absolutelyBullishRelativelyNeutralStyle" format="reference" />
        <attr name="absolutelyBullishRelativelyBearishStyle" format="reference" />
        <attr name="absolutelyNeutralRelativelyBullishStyle" format="reference" />
        <attr name="absolutelyNeutralRelativelyNeutralStyle" format="reference" />
        <attr name="absolutelyNeutralRelativelyBearishStyle" format="reference" />
        <attr name="absolutelyBearishRelativelyBullishStyle" format="reference" />
        <attr name="absolutelyBearishRelativelyNeutralStyle" format="reference" />
        <attr name="absolutelyBearishRelativelyBearishStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="Candle">
        <attr name="bodyStyle" format="reference" />
        <attr name="topWickStyle" format="reference" />
        <attr name="bottomWickStyle" format="reference" />
    </declare-styleable>
</resources>
