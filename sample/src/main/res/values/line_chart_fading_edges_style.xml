<resources>

    <style name="LineChartFadingEdgesAxisTitleStyle">
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="typeface">sans</item>
    </style>

    <style name="LineChartFadingEdgesAxisStyle">
        <item name="showTitle">true</item>
    </style>

    <style name="LineChartFadingEdgesAxisTitleBackgroundStyle">
        <item name="shapeStyle">@style/PillShapeStyle</item>
    </style>

    <style name="PillShapeStyle">
        <item name="cornerSize">100%</item>
        <item name="cornerTreatment">rounded</item>
    </style>

    <style name="LineChartFadingEdgesAxisStyle.Start">
        <item name="verticalAxisHorizontalLabelPosition">inside</item>
        <item name="title">X-axis Title</item>
        <item name="titleStyle">@style/LineChartFadingEdgesAxisTitleStyle.Start</item>
    </style>

    <style name="LineChartFadingEdgesAxisTitleStyle.Start">
        <item name="labelColor">?colorOnPrimary</item>
        <item name="backgroundStyle">@style/LineChartFadingEdgesAxisTitleBackgroundStyle.Start</item>
        <item name="marginEnd">4dp</item>
    </style>

    <style name="LineChartFadingEdgesAxisTitleBackgroundStyle.Start">
        <item name="color">?colorPrimary</item>
    </style>

    <style name="LineChartFadingEdgesAxisStyle.Bottom">
        <item name="title">Y-axis Title</item>
        <item name="titleStyle">@style/LineChartFadingEdgesAxisTitleStyle.Bottom</item>
        <item name="showGuideline">false</item>
    </style>

    <style name="LineChartFadingEdgesAxisTitleStyle.Bottom">
        <item name="labelColor">?colorOnSecondary</item>
        <item name="backgroundStyle">@style/LineChartFadingEdgesAxisTitleBackgroundStyle.Bottom</item>
        <item name="marginTop">4dp</item>
    </style>

    <style name="LineChartFadingEdgesAxisTitleBackgroundStyle.Bottom">
        <item name="color">?colorSecondary</item>
    </style>

</resources>
