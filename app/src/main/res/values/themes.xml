<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LiftChart" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/flickr_pink</item>
        <item name="colorPrimaryVariant">@color/byzantine</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple</item>
        <item name="colorSecondaryVariant">@color/trypan_purple</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">@bool/is_day</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">@bool/is_day</item>
        <!-- Customize your theme here. -->
        <item name="actionBarTheme">@style/ActionBarTheme</item>
        <item name="actionBarStyle">@style/ActionBarStyle</item>
    </style>

    <style name="ActionBarTheme">
        <item name="android:background">?attr/colorSurface</item>
    </style>

    <style name="ActionBarStyle" parent="@style/Widget.MaterialComponents.Light.ActionBar.Solid">
        <item name="elevation">0dp</item>
    </style>

</resources>